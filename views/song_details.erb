<header>
  <h1>Morning, Monday</h1>
  <nav>
    <a href="/">
      <button class="nav_Btn">Home</button>
    </a>
    <% if logged_in? %>
      <a href="/songs/<%= @song['id']%>/edit">
        <button class="nav_Btn">Edit</button>
      </a>
      <form action="/songs/<%= @song['id']%>" method="post">
        <input type="hidden" name="_method" value="delete">
      <button class="nav_Btn">Delete</button>
      </form>
    <% end %>
  </nav>
</header>

<div class="details_body">


  <h2> <%= @song['title'] %></h2>
  <img class="img_detail" src="<%= @song['artwork_url']%>" alt="">

  <section class="song_details">
    <ul>
      <li> <%= @song['artist'] %> </li> 
      <li> <%= @song['album'] %> </li>
    </ul>
  </section>
</div>






<iframe width="560" height="315" src="<%= @song['song_url'].sub('watch?v=', 'embed/') %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>


<p> <%= @song.likes.count%> Likes </p>

<% if has_liked?(@song.id) == false %>
  <form action="/likes" method="post">
    <input type="hidden" name="song_id" value="<%= @song.id %>">
    <button class="like_Btn">Like</button>
  </form>
  <% else %>
    <button class="like_Btn">Like</button>
<% end %>

<% if logged_in? %>
  <form action="/comments" method="post">
    <input type="hidden" name="song_id" value="<%= @song['id'] %>">
    <label for="">Comment</label>
    <textarea name="content"></textarea>
    <button>Post</button>
  </form>

  <% @comments.each do |comment| %>
    <p><%= comment.username %> said...
    <%= comment['content'] %></p>
  <% end %>

<% end %>


