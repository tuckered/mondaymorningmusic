<div class="logged_in_container">
  <span class="logged_in">
    <% if logged_in? %>
      Hello there <%= current_user.username %>
      <form action="/session" method="post">
      <input type="hidden" name="_method"         value="delete">
        <button class="logout_Btn">Logout</button>
      </form>
    <% end %>
  </span>
  <nav class="header_links">
    <% if logged_in? %>
      <a href="/songs/new">Add</a>
      <a href="/playlist">Playlist</a>
    <% end %>
    <% if !logged_in? %>
      <a href="/login">Login</a>
      <a href="/">Home</a>
    <% end %>
  </nav>

</div>

<header>
    <h1>Register</h1>
</header>


<% if @user && !@user.valid? %>
  <p class="error_prompts">That username is already taken. Please try another.</p>
<% end %>

<div class="container">

  <form class="input_form" action="/register" method="post">

    <label for="">Username</label>
  <br>
    <input class="input_box" type="text" name="username">
  <br>
    <label for="">Password</label>
  <br>
    <input class="input_box" type="password" name="password">
  <br>
     <label for="">Email</label>
  <br>
    <input class="input_box" type="email" name="email">
  <br>
    <button class="post_Btn">Register</button>
  </form>





</div>

